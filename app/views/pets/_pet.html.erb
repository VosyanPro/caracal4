<div id="<%= dom_id pet %>">
  <p>
    <strong>Name:</strong>
    <%= pet.name %>
  </p>

  <p>
    <strong>Last hugged at:</strong>
    <%= pet.last_hugged_at %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= pet.email %>
  </p>

  <p>
    <strong>Fluffy:</strong>
    <%= pet.fluffy %>
  </p>

  <p>
    <strong>Colour:</strong>
    <%= pet.colour %>
  </p>

  <p>
    <strong>Owner:</strong>
    <%= pet.owner_id %>
  </p>

</div>
